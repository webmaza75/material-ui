{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "scripthost"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "noErrorTruncation": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
